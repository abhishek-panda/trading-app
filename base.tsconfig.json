{
  "compilerOptions": {
    "target": "ES5",    
    "moduleResolution": "node",
    "lib": [
      "es6",
      "DOM"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "typings/globals"
  ]
}