{
    "compilerOptions": {
      "target": "ES6",                          
      "module": "CommonJS",              
      "lib": ["es6", "DOM"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "typings/globals",
    ]
}