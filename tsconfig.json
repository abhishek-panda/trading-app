{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "module": "ES6",
    "rootDir": ".",
    "outDir": "build",
    "moduleResolution": "node",
    "lib": [
      "es6",
      "DOM"
    ],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "typings/globals",
  ]
}